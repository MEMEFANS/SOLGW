                console.log('Connected! Public Key:', resp.publicKey.toString());
                
                // 更新按钮状态
                const connectButton = document.getElementById('navConnectWallet');
                connectButton.textContent = '已连接';
                connectButton.disabled = true;
                
                // 显示投资表单
                document.getElementById('contributeForm').classList.remove('hidden');
            } catch (err) {
                console.error(err);
                alert('连接钱包失败，请确保安装了 Solana 钱包扩展！');
            }
        }

        window.addEventListener('load', function() {
            const connectButton = document.getElementById('navConnectWallet');
            const solInput = document.getElementById('solAmount');
            
            // 连接钱包按钮点击事件
            if (connectButton) {
                connectButton.addEventListener('click', connectWallet);
            }

            if (solInput) {
                solInput.addEventListener('input', updateDsnkAmount);
            }

            // 更新倒计时函数
            function updateCountdown() {
                const targetDate = new Date('2025-02-01T00:00:00+08:00');
                const now = new Date('2025-01-02T07:43:37+08:00');
                
                const diff = targetDate - now;
                
                const days = Math.floor(diff / (1000 * 60 * 60 * 24));
                const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((diff % (1000 * 60)) / 1000);
                
                document.getElementById('days').textContent = String(days).padStart(2, '0');
                document.getElementById('hours').textContent = String(hours).padStart(2, '0');
                document.getElementById('minutes').textContent = String(minutes).padStart(2, '0');
                document.getElementById('seconds').textContent = String(seconds).padStart(2, '0');
            }

            // 每秒更新倒计时
            setInterval(updateCountdown, 1000);
            updateCountdown(); // 立即执行一次
        });
